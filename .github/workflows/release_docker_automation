name: JAVA & DOCKER CICD

on:
  release:
    types: [ published ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v1

      - name: Set up JDK 11
        uses: actions/setup-java@v1
        with:
          java-version: 1.11

      - uses: actions/cache@v1
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven

      - name: Build with Maven
        run: mvn -B package --file pom.xml

      - name: Read Active Profile from Properties
        id: read_profile
        uses: christian-draeger/read-properties@1.0.1
        with:
          path: './src/main/resources/application.properties'
          property: 'spring.profiles.active'

      - name: Docker Login
        uses: docker/login-action@v1.5.0
        with:
          username: ${{ secrets.DOCKER_USER }}
          password: ${{ secrets.DOCKER_PASS }}

      - name: Build Docker Image
        run: docker build . --file Dockerfile --tag ${{ github.repository }}:${{ steps.read_profile.outputs.value }}-v${{ github.event.release.tag_name }}


      - name: Push Docker Image
        run: docker push ${{ github.repository }}:${{ steps.read_profile.outputs.value }}-v${{ github.event.release.tag_name }}
